			<plugin> <!-- https://cloud.google.com/appengine/docs/standard/java-gen2/maven-reference -->

				<groupId>com.google.cloud.tools</groupId>
				<artifactId>appengine-maven-plugin</artifactId>
				<version>2.4.1</version>

				<configuration>
					<projectId>${gae.project}</projectId>
					<version>${gae.version}</version>
					<promote>${gae.promote}</promote>
				</configuration>

				<executions>
					<execution>

						<id>deploy-to-gae</id>
						<phase>deploy</phase>

						<goals>
							<goal>deploy</goal>
						</goals>

					</execution>
				</executions>

			</plugin>

		</plugins>

	</build>

</project>